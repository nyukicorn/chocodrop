{
  "name": "chocodrop",
  "version": "1.0.2-alpha.0",
  "description": "ChocoDrop: real-time AI image drops for 3D scenes via Model Context Protocol (MCP)",
  "homepage": "https://nyukicorn.github.io/chocodrop/",
  "bugs": {
    "url": "https://github.com/nyukicorn/chocodrop/issues"
  },
  "workspaces": [
    "packages/daemon",
    "packages/sdk"
  ],
  "main": "src/index.js",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./client": "./src/client/index.js",
    "./client/bootstrap": "./src/client/bootstrap.js",
    "./bootstrap": "./src/client/bootstrap.js",
    "./server": "./src/server/index.js"
  },

  "scripts": {
    "dev": "node src/server/server.js",
    "start": "node src/server/server.js",
    "build": "rollup -c rollup.config.js && rollup -c rollup.config.mjs",
    "postbuild": "cp dist/chocodrop-demo.umd.js public/chocodrop-demo.umd.js && cp dist/chocodrop-demo.umd.js public/chocodrop-demo.umd.min.js",
    "build:watch": "rollup -c -w",
    "prebuild": "mkdir -p dist",
    "test": "node --test tests/*.test.js",
    "lint": "eslint src/ scripts/ --ext .js,.mjs",
    "lint:fix": "eslint src/ scripts/ --ext .js,.mjs --fix",
    "format": "prettier --write \"**/*.{js,mjs,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,json,md,html,css}\"",
    "setup:mcp": "node scripts/setup-mcp-config.mjs",
    "example:basic": "python -m http.server 8000 --directory examples",
    "example:server": "node src/server/server.js --port 3011"
  },
  "keywords": [
    "mcp",
    "ai",
    "image-generation",
    "threejs",
    "3d",
    "real-time",
    "natural-language",
    "chocodrop",
    "claude-code"
  ],
  "author": {
    "name": "ChocoDrop Project",
    "email": "chocodrop.dev@gmail.com",
    "url": "https://nyukicorn.github.io/chocodrop/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nyukicorn/chocodrop"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "cors": "^2.8.5",
    "express": "^4.19.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^20.0.0",
    "@types/three": "^0.170.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rollup": "^4.52.0"
  },
  "peerDependencies": {
    "three": ">=0.170.0 <=0.180.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "src/",
    "dist/",
    "examples/",
    "README.md",
    "LICENSE",
    "CONTRIBUTING.md",
    "SECURITY.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
