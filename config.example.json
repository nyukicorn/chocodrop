{
  "mcp": {
    "provider": "kamui-code",
    "configPath": "~/.claude/mcp-kamui-code.json",
    "comment": "KAMUI Code MCPの設定ファイルパスを指定してください。環境変数 MCP_CONFIG_PATH で上書きできます"
  },
  "server": {
    "port": 3011,
    "host": "localhost",
    "outputDir": "./public/generated",
    "corsOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://localhost:5173",
      "http://localhost:8080",
      "http://localhost:8000",
      "http://localhost:8001"
    ]
  },
  "client": {
    "serverUrl": "http://localhost:3011",
    "defaultWidth": 512,
    "defaultHeight": 512,
    "defaultDuration": 3,
    "comment": "serverUrlはクライアント側から接続するサーバーURLです。通常はserver.portと同じポートを指定します"
  }
}
